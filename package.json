{
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "docs": "cd docs && yarn start",
    "clean-node-modules": "find ./ -name 'node_modules' -exec rm -rf '{}' +",
    "test": "yarn prettier:check && yarn jest",
    "jest": "jest --no-cache --bail --ci --runInBand",
    "prettier": "node ./scripts/prettier write-changed",
    "prettier:format": "node ./scripts/prettier write",
    "prettier:check": "node ./scripts/prettier"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "24.1.0",
    "linaria": "^1.3.1",
    "jest": "24.1.0",
    "jsdom": "^13.2.0",
    "glob": "^7.1.2",
    "chalk": "^2.4.1",
    "prettier": "^1.16.4",
    "parcel-bundler": "^1.12.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
   "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "roots": [
      "<rootDir>/packages/themes",
      "<rootDir>/packages/web"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "verbose": true
  },
  "license": "MIT"
}
